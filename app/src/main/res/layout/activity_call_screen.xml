<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nexnet.com.solution.main.CallScreenActivity">

    <TextView
        android:text="calling..."
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="88dp"
        android:layout_alignBottom="@+id/textViewPhoneNumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/textViewPhoneNumber"
        android:layout_marginTop="245dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="End Call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:id="@+id/buttonEndCall" />

    <ToggleButton
        android:text="Speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonEndCall"
        android:layout_alignLeft="@+id/buttonEndCall"
        android:layout_alignStart="@+id/buttonEndCall"
        android:id="@+id/buttonSpeaker" />
</RelativeLayout>
