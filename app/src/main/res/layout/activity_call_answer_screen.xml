<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_call_answer_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nexnet.com.solution.call.CallAnswerScreenActivity">

    <Button
    android:text="Answer Call"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/buttonAnswerCall"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <Button
        android:text="End Call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEndCall"
        android:layout_alignBaseline="@+id/buttonAnswerCall"
        android:layout_alignBottom="@+id/buttonAnswerCall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp" />

    <ToggleButton
        android:text="Speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSpeaker"
        android:layout_below="@+id/buttonAnswerCall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAnswerCall"
        android:layout_toRightOf="@+id/buttonAnswerCall"
        android:layout_toEndOf="@+id/buttonAnswerCall"
        android:layout_marginBottom="73dp"
        android:id="@+id/textViewJID" />

</RelativeLayout>
